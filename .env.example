# Application Configuration
APP_NAME=first-project
NODE_ENV=development
BASE_URL=http://localhost:3000

# Admin Configuration
ADMIN_PASSWORD=your_secure_admin_password
GENSWEATY_PASSWORD=your_secure_demo_password

# Security
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_chars

# AI API Keys
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
GOOGLE_API_KEY=your-google-ai-api-key

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/app

# Database Safety Configuration
# CRITICAL: This should ALWAYS be false in production
# When false (default): Setup script only creates missing data, NEVER deletes existing user data
# When true: Allows database reset ONLY if database is completely empty (development only)
ALLOW_DATABASE_RESET=false

# Email Service Configuration
# Resend API configuration (recommended)
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=noreply@yourdomain.com

# Alternative: SMTP Configuration (if not using Resend)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=your-email@gmail.com

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# MinIO Configuration (S3-compatible storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET=app-storage

# Optional: External Service URLs
# FRONTEND_URL=http://localhost:3000
# API_URL=http://localhost:3000

# Port Configuration (for Docker)
LISTEN_IP=127.0.0.1

# Feature Flags (optional)
# ENABLE_AI_FEATURES=true
# ENABLE_EMAIL_VERIFICATION=true

# Logging
# LOG_LEVEL=info
